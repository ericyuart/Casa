<div class="container">
  <div class="login">
  <%= form_for@house, :html => { :multipart => true } do |f| %>
    <% if @house.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@house.errors.count, "error") %> prohibited this house from being saved:</h2>
        <ul>
        <% @house.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-4 space">
        <%= f.fields_for :pictures do |ff| %>
          <div class="field">
            <%= ff.label :picture %><br />
            <%= ff.file_field :picture %>
          </div>
        <% end %>
        <div class="field">
          <%= f.label :neighborhood %><br>
          <%= f.select(:neighborhood, House::NEIGHBORHOODS_LIST, prompt: "Select ...") %>
        </div>
        <div class="field">
          <%= f.label :house_type %><br>
          <%= f.select(:house_type, House::HOUSE_TYPE_LIST, prompt: "Select ...") %>
        </div>
        <div class="field">
          <%= f.label :street_1 %><br>
          <%= f.text_field :street_1 %>
        </div>
        <div class="field">
          <%= f.label :street_2 %><br>
          <%= f.text_field :street_2 %>
        </div>
        <div class="field">
          <%= f.label :city %><br>
          <%= f.text_field :city %>
        </div>
        <div class="field">
          <%= f.label :state %><br>
          <%= f.select(:state, House::STATES_LIST, prompt: "Select ...") %>
        </div>
        <div class="field">
          <%= f.label :zip %><br>
          <%= f.text_field :zip %>
        </div>
      </div>
      <div class="col-md-4 space">
        <div class="field">
          <%= f.label :season %><br>
          <%= f.select(:season, House::SEASONS_LIST, prompt: "Select ...") %>
        </div>
        <div class="field">
          <%= f.label :price_per_month %><br>
          <%= f.text_field :price %>
        </div>
        <div class="field">
          <%= f.label :utilities_included %><br>
          <%= f.check_box :utilities_included %>
        </div>
        <div class="field">
          <%= f.label :number_of_bedrooms %><br>
          <%= f.text_field :num_of_bedrooms %>
        </div>
        <div class="field">
          <%= f.label :number_of_bathrooms %><br>
          <%= f.text_field :num_of_bathrooms %>
        </div>
        <div class="field">
          <%= f.label :private_room %><br>
          <%= f.check_box :private_room %>
        </div>
        <div class="field">
          <%= f.label :private_bath %><br>
          <%= f.check_box :private_bath %>
        </div>
        <div class="field">
          <%= f.label :gender %><br>
          <%= f.select(:gender, House::GENDER_LIST, prompt: "Select...") %>
        </div>
      </div>
      <div class="col-md-4 space">
        
        <div class="field">
          <%= f.label :laundry_available %><br>
          <%= f.select(:laundry, House::LAUNDRY_LIST, prompt: "Select ...") %>
        </div>
        <div class="field">
          <%= f.label :smoking_friendly %><br>
          <%= f.check_box :smoking %>
        </div>
        <div class="field">
          <%= f.label :alcohol_friendly %><br>
          <%= f.check_box :drinking %>
        </div>
        <div class="field">
          <%= f.label :pets_allowed %><br>
          <%= f.check_box :pets_allowed %>
        </div>
        <div class="field">
          <%= f.label :furnished %><br>
          <%= f.check_box :furnished %>
        </div>
        <% if controller.action_name == 'edit' %>
          <div class="field">
            <%= f.label :available %><br>
            <%= f.check_box :active %>
          </div>
        <% else %>
          <%= f.hidden_field :active, value: true %>
        <% end %>
        <div class="field">
          <%= f.label :parking_available %><br>
          <%= f.check_box :parking %>
        </div>
        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_area :description %>
        </div>
        <div class="actions">
        <%= f.submit 'Submit', :class => 'btn btn-default submit' %>
        </div>
      </div>

  <% end %>
    </div>
  </div>
</div>