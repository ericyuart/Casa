                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="mercedes">Mercedes</option>
                    <option value="audi">Audi</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Gender:</p>
                </div>
                <div class="col-xs-1">
                <select>
                  <option value="volvo">Volvo</option>
                  <option value="saab">Saab</option>
                  <option value="mercedes">Mercedes</option>
                  <option value="audi">Audi</option>
                </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Season:</p>
                </div>
                <div class="col-xs-1">
                  <select>
                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="mercedes">Mercedes</option>
                    <option value="audi">Audi</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Smoking?:</p>
                </div>
                <div class="col-xs-1">
                  <select>
                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="mercedes">Mercedes</option>
                    <option value="audi">Audi</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Drinking?:</p>
                </div>
                <div class="col-xs-1">
                  <select>
                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="mercedes">Mercedes</option>
                    <option value="audi">Audi</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Room:</p>
                </div>
                <div class="col-xs-1">
                  <select>
                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="mercedes">Mercedes</option>
                    <option value="audi">Audi</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Price Limit:</p>
                </div>
                <div class="col-xs-1">
                  <select>
                    <option value="volvo">Volvo</option>
                    <option value="saab">Saab</option>
                    <option value="mercedes">Mercedes</option>
                    <option value="audi">Audi</option>
                  </select>
                </div>
              </div>

              <center><button type="submit">Apply Filters</button></center>
            </form>

          </div>
        </div>
      </div>
    </div>


