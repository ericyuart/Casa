<p id="notice"><%= notice %></p>

<% if !logged_in? then check_login  %><% end %>

<% if @users.empty? %>
  <h5><center><i>There are currently no users to view. Please check back again!</i></center></h5>
<% else %>
    <div id="main-container" class="container-fluid">
      <div id="main content" class="col-xs-9">
      <% @users.each do |user| %>
        <div class="row">
          <div class="card">
          <div class="card-block">
            <div class="col-xs-2">
              <% if user.picture.blank? %>
                <%= image_tag 'empty_user_picture.png', :class => "img-circle", size: "100x100", class: "left" %>
              <% else %>
                <%= image_tag user.picture, :class => "img-circle", size: "100x100" %>
              <% end %>
            </div>
            <div class="col-xs-2">     
              <h4 class="card-title"><%= user.proper_name %></h4>
            </div>
            <div class="col-xs-5">
              <p><%= user.description %></p>
              <p><%= link_to 'View User', user_path(user)%></p>
            </div>
            <div class="col-xs-2">
              <i class="fa fa-envelope"></i><p class="fa_contact"><%= mail_to user.email %></p><br>
              <i class="fa fa-phone"></i><p class="fa_contact"><%= number_to_phone(user.phone) %></p><br>
              <% if user.fb_link.blank? %>
              <% else %>
              <i class="fa fa-facebook-square"></i><p class="fa_contact"><%= user.fb_link %></p><br>
              <% end %>
            </div>
          </div>
          </div>
        </div>
      <% end %>
      </div>
      
      <div id="sidebar" class="col-xs-3">
        <div class="card">
          <div class="card-block">
            <form name="user_search_filters">
            <div class="user_dropdown">
              <h4><center>Filters</center></h4>
              <hr>
              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Neighborhood</p>
                </div>
                <div class="col-xs-2">
                  <select>
                    <option value="" disabled selected="selected">Select...</option>
                    <option value="Bloomfield">Bloomfield</option>
                    <option value="Downtown">Downtown</option>
                    <option value="East Liberty">East Liberty</option>
                    <option value="Highland Park">Highland Park</option>
                    <option value="Homestead">Homestead</option>
                    <option value="North Side">North Side</option>
                    <option value="Oakland">Oakland</option>
                    <option value="Point Breeze">Point Breeze</option>
                    <option value="Shadyside">Shadyside</option>
                    <option value="South Side">South Side</option>
                    <option value="Squirrel Hill">Squirrel Hill</option>
                    <option value="Strip District">Strip District</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Gender</p>
                </div>
                <div class="col-xs-2">
                <select>
                  <option value="" disabled selected="selected">Select...</option>
                  <option value="Female">Female</option>
                  <option value="Male">Male</option>
                  <option value="Not Specified">Not Specified</option>
                </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Season</p>
                </div>
                <div class="col-xs-2">
                  <select width="100px">
                    <option value="" disabled selected="selected">Select...</option>
                    <option value="Winter">Winter</option>
                    <option value="Spring">Spring</option>
                    <option value="Summer">Summer</option>
                    <option value="Fall">Fall</option>
                    <option value="Year">Year</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Smoking?</p>
                </div>
                <div class="col-xs-2">
                  <select>
                    <option value="" disabled selected="selected">Select...</option>
                    <option value="true">True</option>
                    <option value="false">False</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Drinking?</p>
                </div>
                <div class="col-xs-2">
                  <select>
                    <option value="" disabled selected="selected">Select...</option>
                    <option value="true">True</option>
                    <option value="false">False</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Room</p>
                </div>
                <div class="col-xs-2">
                  <select>
                    <option value="" disabled selected="selected">Select...</option>
                    <option value="Single">Single</option>
                    <option value="Double">Double</option>
                    <option value="No Preference">No Preference</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  <p class="user_filter">Price Limit:</p>
                </div>
                <div class="col-xs-1">
                  <input type="text">
                </div>
              </div>

              <center><button type="submit">Apply Filters</button></center>
            </div>
            </form>

          </div>
        </div>
      </div>
    </div>

<% end %>